<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_weight="1"
        android:id="@+id/bott_back"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bott_back" />
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/money"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            tools:ignore="NotSibling" />

    </FrameLayout>


    <FrameLayout
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ramka"
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/pole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Limage1"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedWeights" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/pole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedWeights" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/pole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            <com.template.ImageViewScrolling.ImageViewScrolling
                android:visibility="gone"
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pole"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                tools:ignore="RtlSymmetry" />

            <com.template.ImageViewScrolling.ImageViewScrolling
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/pole"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />

            <com.template.ImageViewScrolling.ImageViewScrolling
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/pole"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />


        </LinearLayout>

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
    </FrameLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/bott_spin"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bott_spin"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_marginEnd="16dp"
            android:id="@+id/bott_autospin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bott_autospin"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bet"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:onClick="min"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/bet"
            app:layout_constraintBottom_toBottomOf="@+id/bet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/minus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/min"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:onClick="onClick"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/bet"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/bet"
            app:layout_constraintBottom_toBottomOf="@+id/bet"
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintTop_toTopOf="@+id/bet"
            app:layout_constraintBottom_toBottomOf="@+id/bet"
            app:layout_constraintStart_toEndOf="@+id/minus1"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/plus"
            android:text="0"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>